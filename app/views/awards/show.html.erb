<div class="title contract single">
  <h2>Contrato</h2>
</div>

<div class="panel panel-default">
  <div class="table-responsive">
    <table class="table footable table-striped">
      <tbody>
        <tr>
          <th><i class="glyphicon glyphicon-question-sign" data-toggle="tooltip" data-placement="top" title="Tooltip on top"></i> Descripción</th>
          <td><%= @award.properties['Objeto del contrato - Descripción'] %></td>
        </tr>
        <tr>
          <th><i class="glyphicon glyphicon-question-sign" data-toggle="tooltip" data-placement="top" title="Tooltip on top"></i> Fecha</th>
          <td><%= @award.award_date %></td>
        </tr>
        <tr>
          <th><i class="glyphicon glyphicon-question-sign" data-toggle="tooltip" data-placement="top" title="Tooltip on top"></i> Administración</th>
          <td><%= link_to @award.public_body.name, public_body_path(@award.public_body) unless @award.public_body.name.blank?%></td>
        </tr>
        <tr>
          <th><i class="glyphicon glyphicon-question-sign" data-toggle="tooltip" data-placement="top" title="Tooltip on top"></i> Ganador</th>
          <td><%= link_to @award.bidder.name, bidder_path(@award.bidder) unless @award.bidder.name.blank? %></td>
        </tr>
        <tr>
          <th><i class="glyphicon glyphicon-question-sign" data-toggle="tooltip" data-placement="top" title="Tooltip on top"></i> Tipo</th>
          <td><%= @award.category %></td>
        </tr>
        <tr>
          <th><i class="glyphicon glyphicon-question-sign" data-toggle="tooltip" data-placement="top" title="Tooltip on top"></i> Procedimiento</th>
          <td><%= @award.process_type %></td>
        </tr>
        <tr>
          <th><i class="glyphicon glyphicon-question-sign" data-toggle="tooltip" data-placement="top" title="Tooltip on top"></i> Tramitación</th>
          <td><%= @award.process_track %></td>
        </tr>
        <tr>
          <th><i class="glyphicon glyphicon-question-sign" data-toggle="tooltip" data-placement="top" title="Tooltip on top"></i> Importe (€)</th>
          <td><%= (@award.amount * 0.01) %></td>
        </tr>
        <tr>
          <th><i class="glyphicon glyphicon-question-sign" data-toggle="tooltip" data-placement="top" title="Tooltip on top"></i> Fuente (€)</th>
          <td><%= link_to @award.properties['BOE ID'],
                          "http://www.boe.es/buscar/doc.php?id=#{@award.properties['BOE ID']}",
                          target: '_blank' %></td>
        </tr>
      </tbody>
    </table>
  </div>
</div>

<div class="panel panel-default">
  <div class="table-responsive">
    <table class="table footable table-striped">
      <tbody>
        <% @award.properties.keys.sort.each do |key| %>
          <% next if @award.properties[key].blank? %>
          <tr>
            <th><i class="glyphicon glyphicon-question-sign" data-toggle="tooltip" data-placement="top" title="Tooltip on top"></i> <%= key %></th>
            <td><%= @award.properties[key] %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>
