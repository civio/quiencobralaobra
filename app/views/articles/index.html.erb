<div class="title posts">
  <h2>Artículos</h2>
</div>

<!-- Highlighted Posts -->
<% @articles_highlighted.each do |article| %>
  <div class="posts posts-highlighted row">
    <div class="wall-item col-sm-12">
      <%= render('partials/post', article: article) %>
    </div>
  </div>
<% end %>

<!-- Gallery -->
<div class="posts posts-gallery row">
  <div class="wall-item col-sm-12">
    <div class="panel panel-default">
      <div class="panel-heading">
        <h3>
          <span><%= link_to 'Las superobras', '/galeria' %></span>
        </h3>
      </div>
      <div class="panel-body">
        <%= link_to image_tag(image_path(@gallery_picture), :class => 'img-responsive'), '/galeria', :class => 'image' %>
        <div class="description">
          <p>Descubre las mayores obras realizadas en España entre <%= year_min() %> y <%= year_max() %></p>
        </div>
      </div>
    </div>
  </div>
</div>

<!-- Posts list -->
<div class="posts wall row">
  <% @articles.each do |article| %>
    <div class="wall-item col-sm-6">
      <%= render('partials/post', article: article) %>
    </div>
  <% end %>
</div>

