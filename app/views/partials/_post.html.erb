<div class="panel panel-default">
  <div class="panel-heading">
    <h3>
      <span><%= link_to article.title, article_path(article) %></span>
    </h3>
  </div>
  <div class="panel-body">
    <% if article.photo and !article.photo.url.blank? %>
      <%= link_to image_tag(article.photo.url(:small), :class => 'img-responsive'), article_path(article), :class => 'image' %>
    <% end %>
    <% unless article.lead.blank? %>
    <div class="description">
      <p><%= article.lead.html_safe %></p>
    </div>
    <% end %>
  </div>
</div>